@page
@model CSMWebsite2024.Web.Pages.Posts.Create
@{
}


<h1>Create Post</h1>

<form method="Post">
    <div class="mb-3">
        <label for="@Model.Item!.Title" class="form-label">Title</label>
        <input type="text" class="form-control" id="@Model.Item!.Title" aria-describedby="titleHelp" asp-for="@Model.Item!.Title" name="Title">
        <div id="titleHelp" class="form-text">Please input a title.</div>
    </div>
    <div class="mb-3">
        <label for="@Model.Item!.Description" class="form-label">Description</label>
        <textarea class="form-control" id="@Model.Item!.Description" aria-describedby="descriptionHelp" asp-for="@Model.Item!.Description" name="Description">
        </textarea>
        <div id="descriptionHelp" class="form-text">Please input a description.</div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>